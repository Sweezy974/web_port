<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>{% block title %}Welcome!{% endblock %}</title>
  {% block stylesheets %}{% endblock %}
  <!-- <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" /> -->
<link href="{{ asset('media/style/css/main.css') }}" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
</head>

<body>
  <!-- Image and text -->
  <nav id="global-nav" class="nav navbar navbar-light bg-dark justify-content-center fixed-top the-blur">
    <a class="navbar-brand" href="#">
      <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
      ThePurist
    </a>
    <ul align="center" class="nav justify-content-center">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('admin_training_index')}}">Parcours</a>
      </li>
      <li class="nav-item ">
        <a class="nav-link" href="{{ path('admin_production_index')}}">Réalisations</a>
      </li>
      <li class="nav-item ">
        <a class="nav-link" href="{{ path('admin_skill_index')}}">Compétences</a>
      </li>
      <li class="nav-item ">
        <a class="nav-link" href="z">Contact</a>
      </li>
      {% if is_granted("ROLE_USER") %}
      <li class="nav-item">
        <a class="nav-link" style="color:red;" href="{{ path('admin_index')}}">Admin</a>
      </li>
      {% endif %}
    </ul>
  </nav>
  {% block body %}
  {% endblock %}

  {% block javascripts %}
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/aos@2.3.0/dist/aos.js" type="text/javascript"></script>
  <script>
  $(window).scroll(function() {
      var scroll = $(window).scrollTop();

      if (scroll >= 50) {
          $(".clearHeader").addClass("darkHeader");
      } else {
          $(".clearHeader").removeClass("darkHeader");
      }
  });
  </script>
{% endblock %}
</body>
</html>
