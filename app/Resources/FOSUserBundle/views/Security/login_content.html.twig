<div class="container">
   <div class="row">
      <div class="col s12 m8 l8 offset-m2 offset-l2 ">
         <div class="center">
            <h4>connexion</h4>
         </div>
         {% trans_default_domain 'FOSUserBundle' %}

         {% if error %}
         <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
         {% endif %}

         <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="input-field">
               <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
               <label for="username">Nom d'utilisateur</label>
            </div>
            <div class="input-field">
               <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
               <label for="password">Mot de passe</label>
            </div>

            <div class="row right-align">
               <p>
               <input type="checkbox" id="remember_me" name="remember_me" checked="checked" />
               <label for="remember_me">se souvenir de moi</label>
               </p>
            </div>
            <div class="row center">
               <input class="waves-effect waves-light btn cyan" type="submit" value="connexion"/>

            </div>

         </form>

      </div>
   </div>
</div>
