{% extends 'base.html.twig' %}

{% block body %}
    <h1>Production</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ production.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ production.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ production.description }}</td>
            </tr>
            <tr>
                <th>Begindate</th>
                <td>{% if production.beginDate %}{{ production.beginDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if production.endDate %}{{ production.endDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_production_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_production_edit', { 'id': production.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
