{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ profile.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ profile.lastName }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if profile.birthDate %}{{ profile.birthDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ profile.mail }}</td>
            </tr>
            <tr>
                <th>Mail2</th>
                <td>{{ profile.mail2 }}</td>
            </tr>
            <tr>
                <th>Localphonenumber</th>
                <td>{{ profile.localPhoneNumber }}</td>
            </tr>
            <tr>
                <th>Delocalizedphonenumber</th>
                <td>{{ profile.delocalizedPhoneNumber }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ profile.description }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ profile.profession }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ profile.avatar }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if profile.updatedAt %}{{ profile.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_profile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_profile_edit', { 'id': profile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
